  <link rel="stylesheet" href="css/calendar.css">

{# templates/conference-agenda-theme.html.twig #}

<section>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="date_tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">{{ tab_panels['tab1'].label }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile_tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">{{ tab_panels['tab2'].label }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact_tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">{{ tab_panels['tab3'].label }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="confirm_tab" data-toggle="tab" href="#confirm" role="tab" aria-controls="contact" aria-selected="false">{{ tab_panels['tab4'].label }}</a>
                    </li>
                </ul>
                <!-- Tabs Content -->
                <div class="tab-content">
                    <!-- Tab 1 -->
                    <div class="tab-pane fade show active" id="home" role="tabpanel">
                       <h3>What's {{ tab_panels['tab1'].label }}</h3>
                        <hr>
                        <div class="content_bod">
                            <div class="row">
                                <div class="col center">
                                    <p>{{ tab_panels['tab1'].content }}</p>
                                    <!-- <button id="bookit" type="button" class="btn btn-primary"> Book it!</button> -->
                                       {% include '@appointment_calendar/appointment-calendar-tab1-theme-hook.html.twig' with content_1.variables %}

                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <!-- Tab 2 -->
                    <div class="tab-pane fade" id="profile" role="tabpanel">
                       <h3>{{ tab_panels['tab2'].label }}</h3>
                        <hr>
                        <p>{{ tab_panels['tab2'].content }}</p>
                         {% include '@appointment_calendar/appointment-calendar-tab2-theme-hook.html.twig' with content_2.variables %}
                        <div class="line"></div>
                    </div>
                    <!-- Tab 3 -->
                    <div class="tab-pane fade" id="contact" role="tabpanel">
                        <h3>{{ tab_panels['tab3'].label}}</h3>
                            <hr>
                            <h4 class="text-center"><span id="c_name">{{ tab_panels['tab3'].label }}</span>,<span> here's the details:</span></h4>
                            <hr>
                            <p>{{ tab_panels['tab3'].content }}</p>
                            <div class="line"></div>
                    </div>
                    <!-- Tab 4 -->
                    <div class="tab-pane fade" id="confirm" role="tabpanel">
                         <h3>Confirmation</h3>
                            <hr>
                            <h5 class="text-center">{{ site_name }}</h5>
                            <div class="form-group  row justify-content-center">                                        
                                <h6>{{ tab_panels['tab4'].label }}</h6><br/>                                   
                            </div>
                            <h5 class="text-center pb-5 px-3"><span id="confirm_name">Client Name</span></h5>
                            <div class="border border-1 box">
                                <p>{{ tab_panels['tab4'].content }}</p>
                            </div>
                    </div>
                </div>
            
</section>

